<%= render 'header' %>
<br>
<div class="row">
    <div class="col-md-6">
      <h2>
      <%= @rock['name'] %><br>
      </h2>
      <p>
        <%= @rock['description'] %><br>
      </p>
    </div>
    <div class="col-md-6">
      <img class="small_img2" src='<%= @rock.image %>'>
    </div>
  </div>
</div>
<br>
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <ul class="list-inline"">
        <li>
          <button type="button" class="btn btn-info"><%= link_to "Delete Rock", { action: "destroy", id: @rock.id },
                                method: :delete, data: { confirm: "Are you sure?" } %></button><br>
        </li>
        <li>
          <button type="button" class="btn btn-info"><%= link_to 'Edit', edit_rock_path(@rock) %></button>
        </li>
      </ul>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>
