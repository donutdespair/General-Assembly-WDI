  <%= f.text_field :name %><br>
  <%= label(:pirate, :sea) %><br>
  <%= f.text_field :sea %><br>
  <%= label(:pirate, :ship_name) %><br>
  <%= f.text_field :ship_name %><br>
  <%= label(:pirate, :limbs) %><br>
  <%= f.text_field :limbs %><br>
